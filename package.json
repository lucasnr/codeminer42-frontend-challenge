	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.{ts|tsx}$": "<rootDir>/test-preprocessor.js"
		},
		"testMatch": [
			"**/__tests__/*.{ts|tsx|js}"
		],
		"moduleNameMapper": {
			"~/(.*)": "<rootDir>/src/$1"
		},
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		]
	},
	"scripts": {
		"start": "react-app-rewired start",
		"build": "react-app-rewired build",
		"test": "react-app-rewired test",
